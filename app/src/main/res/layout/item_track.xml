<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="model"
            type="com.coooldoggy.itunesmusic.ui.viewmodel.TrackListViewModel" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp" />

    <ImageView
        android:id="@+id/iv_artWorkUrl"
        android:src="@drawable/ic_music"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/guidelineTop"
        app:layout_constraintLeft_toRightOf="@id/guidelineLeft"
        android:layout_width="60dp"
        android:layout_height="60dp"/>

    <TextView
        android:id="@+id/tv_track"
        android:text="trackName"
        app:layout_constraintTop_toBottomOf="@id/guidelineTop"
        app:layout_constraintLeft_toRightOf="@+id/iv_artWorkUrl"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_collection"
        android:text="collectionName"
        app:layout_constraintLeft_toRightOf="@id/iv_artWorkUrl"
        app:layout_constraintTop_toBottomOf="@+id/tv_track"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_artist"
        android:text="artistName"
        app:layout_constraintLeft_toRightOf="@id/iv_artWorkUrl"
        app:layout_constraintTop_toBottomOf="@+id/tv_collection"
        android:textColor="@color/black"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:textSize="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/iv_favorite"
        android:src="@drawable/image_favorite_selector"
        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toRightOf="@id/tv_collection"
        app:layout_constraintTop_toBottomOf="@id/guidelineTop"
        app:layout_constraintRight_toLeftOf="@id/guidelineRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>
</layout>